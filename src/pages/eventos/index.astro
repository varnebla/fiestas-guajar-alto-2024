---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageTitle from '../../components/PageTitle.astro';
import EventCard from '../../components/EventCard.astro';

import { getNextEvents } from '../../services/eventos';

const events = getNextEvents();
---

<BaseLayout
  title="Eventos"
  description="Agenda de Eventos en Guájar Alto: Descubre nuestras festividades, actividades culturales y experiencias a lo largo del año. ¡Te esperamos!"
>
  <section
    class="flex flex-col items-center gap-y-8 max-w-5xl mx-auto pt-8 lg:pt-10"
  >
    <PageTitle
      title="Eventos"
      underlineClasses="bottom-4 -left-1 -right-2 h-2/5 -skew-y-1 bg-blue-300"
    />
    <article class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        events.map((event) => {
          return <EventCard event={event} />;
        })
      }
    </article>
  </section>
</BaseLayout>
